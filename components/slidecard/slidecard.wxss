/* components/slidecard.wxss */
.custom-slider {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.slider-image {
  width: 300px;
  height: 200px;
  margin-bottom: 20px;
}

.slider-text {
  font-size: 16px;
  color: #333;
  text-align: center;
}

.slider-buttons {
  display: flex;
  justify-content: space-between;
  width: 200px;
  margin-top: 20px;
  align-items: center;
}

.slider-button {
  width: 40px;
  height: 40px;
  display: flex;
  flex:1;
  align-items: center;
  justify-content: space-between;
}
.page-info {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #666;
}
